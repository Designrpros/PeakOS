# Dockerfile for testing PeakOS on x86_64 architecture
FROM --platform=linux/amd64 ubuntu:22.04

# Avoid interaction during package installation
ENV DEBIAN_FRONTEND=noninteractive

# Install dependencies for Rust, Iced/WGPU, and PeakOS systems
RUN apt-get update && apt-get install -y \
    curl \
    build-essential \
    pkg-config \
    libssl-dev \
    libwayland-dev \
    libxkbcommon-dev \
    libfontconfig1-dev \
    libfreetype6-dev \
    libgtk-3-dev \
    libdbus-1-dev \
    libasound2-dev \
    libudev-dev \
    cmake \
    git \
    python3 \
    libclang-dev

# Install Rust
RUN curl --proto '=https' --tlsv1.2 -sSf https://sh.rustup.rs | sh -s -- -y
ENV PATH="/root/.cargo/bin:${PATH}"

# Set workspace
WORKDIR /workspace

