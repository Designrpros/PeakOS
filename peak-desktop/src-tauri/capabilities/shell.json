{
    "$schema": "../gen/schemas/desktop-schema.json",
    "identifier": "shell",
    "description": "Shell capabilities for app launching",
    "windows": [
        "main"
    ],
    "permissions": [
        {
            "identifier": "shell:allow-open",
            "allow": [
                {
                    "name": "all-files",
                    "cmd": "open",
                    "args": [
                        {
                            "validator": "^.*$"
                        }
                    ]
                }
            ]
        }
    ]
}